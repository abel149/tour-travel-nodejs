    <secton id="blog">
      <div class="blog-heading">
       <div>
        <span><a href="#" onclick="
          
          getElementById('blo').style.display = 'flex';
          getElementById('bloo').classList.add('do');

          
          ">Post blog</a></span>
        <form action="/upload" method="post" id="blo" enctype="multipart/form-data">
          <div id="bloo">
            <label for="place" ></label> 
            <input name="place" type="text" list="mylist" placeholder="Place" id="Place" class="b inp" style="border: 1px dashed gray; border-bottom:none;">
              <datalist id="mylist">
                <option>Afar</option>
                <option>Harar</option>
                <option>Gondor</option>
                <option>Abay</option>
                <option>Lalibela</option>
                <option>Axum</option>
                <option></option>
            </datalist>
            <label for="date"></label>
            <input  id="date" name="date"  type="text" placeholder="date/month/year" class="b date d" style="border: 1px dashed gray; border-top:none">
            <label for="intro"></label>
            <textarea  id="intro" name="intro" class="b t" style="border: 1px dashed gray; height: 100px; border-top:none ;" placeholder="Intro"></textarea> 
            <label for="blog"></label>
            <textarea  id="blog" name="blog" class="b t2" style="border: 1px dashed gray; height: 200px; border-top:none ;" placeholder="Blog"></textarea>
            <label for="image"></label>
            <input type="file" name="image" id="image"  >  
            <button 
              class="b bt po" style="border: none; background-color: yellow; border-radius: 10px;">Post</button>
          </div>
        </form>
       </div>
        <span> Recent Posts</span>
        <h3>Blog Posts</h3>
      </div>
      <div id="grid">
        <% post.forEach(element=>{ %>
          <div class="blog-container" id="bloggg">
           
            <div class="blog-box" id="newblog">
              <div class="blog-img" class="bg">
             
                <img src="<%-element.imageurl%>" alt="" class="i"/>
                <div class="blog-text insider">
                 <i class="fa fa-user" aria-hidden="true"> <span class="abc"><%-element.date%></span></i>
                 <a href="#" class="blog-title">
                  <%-element.place%>
                 </a>
                 <p class="text post">
                  <%-element.intro%>
                 <span class="dots dot2">
                   
       ...
